<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action_message %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @admin])  do |f| %>
            <div class="form-group">
                <% if @admin.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                    <%= button_tag "×", type: "button", class: "close", "data-dismiss": "alert", "aria-hidden":"true" %>
                    <ul>
                        <% @admin.errors.full_messages.each do |message| %>
                        <li><%= message  %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <%= f.label :name, class: "control-label" %>
                <%= f.text_field :name, class: "form-control", placeholder:"Nome do administrador" %>
                <%= f.label :email, class: "control-label" %>
                <%= f.text_field :email, class: "form-control", placeholder:"Email do administrador" %>
                <% if policy(@admin).edit? %>
                  <div class="form-group">
                      <%= f.label :role , class: "control-label" %>
                      <%= f.collection_radio_buttons :role , options_for_roles , :id, :description, class: "form-control" do |b| %>
                        <div class="radio">
                          <%= b.label { b.radio_button } + b.text %>
                        </div>
                      <% end %>
                  </div>
                <% end %>
                <%= f.label :password, class: "control-label" %>
                <%= f.password_field :password, class: "form-control", placeholder:"Senha" %>
                <%= f.label :password_confirmation, class: "control-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirmação de senha" %>
            </div>
            <%= submit_tag "Salvar", class: "btn btn-default" %>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
