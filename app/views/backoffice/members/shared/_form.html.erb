<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action_message %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @member])  do |f| %>
            <div class="form-group">
                <% if @member.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                    <%= button_tag "×", type: "button", class: "close", "data-dismiss": "alert", "aria-hidden":"true" %>
                    <ul>
                        <% @member.errors.full_messages.each do |message| %>
                        <li><%= message  %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <%= f.label :first_name, class: "control-label" %>
                <%= f.text_field :first_name, class: "form-control", placeholder:"Primeiro nome" %>
                <%= f.label :last_name, class: "control-label" %>
                <%= f.text_field :last_name, class: "form-control", placeholder:"Ultimo nome" %>
                <%= f.label :email, class: "control-label" %>
                <%= f.text_field :email, class: "form-control", placeholder:"Email do usuário" %>
                <%= f.label :cell_phone, class: "control-label" %>
                <%= f.text_field :cell_phone, class: "form-control", placeholder:"Celular do usuário" %>
                <%= f.label :name_school, class: "control-label" %>
                <%= f.text_field :name_school, class: "form-control", placeholder:"Nome da escola" %>
                <%= f.label :cnpj_school, class: "control-label" %>
                <%= f.text_field :cnpj_school, class: "form-control", placeholder:"Cnpj da escola" %>

                <%= f.label :password, class: "control-label" %>
                <%= f.password_field :password, class: "form-control", placeholder:"Senha" %>
                <%= f.label :password_confirmation, class: "control-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirmação de senha" %>
            </div>
            <%= submit_tag "Salvar", class: "btn btn-default" %>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
