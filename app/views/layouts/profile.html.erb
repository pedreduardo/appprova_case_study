<!DOCTYPE html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Approvado</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'profile', media: 'all' %>
    <%= stylesheet_link_tag    'site/profile', media: 'all' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile' %>
    <%= csrf_meta_tags %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <%= render partial: "layouts/site_shared/navigation" %>
    <div id="wrapper" class="toggled">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="nav" id="side-menu">
                <li class="sidebar-brand">
                    <%= link_to site_profile_dashboard_index_path do %>
                    <%= fa_icon('dashboard fw') %>
                    <%= t('backoffice_menu.dashboard') %>
                    <% end %>
                </li>
                <li class="sidebar-brand">
                    <%= link_to site_profile_students_path do %>
                    <%= fa_icon('book fw') %>
                    <%= t('backoffice_menu.students') %>
                    <% end %>
                </li>
                <li class="sidebar-brand">
                    <%= link_to site_profile_students_by_member_path do %>
                    <%= fa_icon('dashboard fw') %>
                    <%= t('backoffice_menu.my_students') %>
                    <% end %>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                            <%= yield %>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
</body>

</html>
