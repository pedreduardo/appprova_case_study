<div id="flash"></div>
<h1 class="page-header"><%= @students.model_name.human(count: 2) %></h1>
<div class="panel panel-default">
    <div class="panel-heading">

        <%= t('messages.listing', model: @students.model_name.human(count: 2)) %>
    </div>

    <%= form_tag site_profile_students_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, nil, :placeholder => "#{t('labels.name_or_enem')}" %>
        <%= submit_tag "#{t('labels.search')}", :name => nil, :class => 'btn btn-default' %>
      </p>
    <% end %>

    <div class="panel-body">
      <%= paginate @students %>
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead>
                  <tr>
                      <th><%= @students.model.human_attribute_name('name') %></th>
                      <th><%= @students.model.human_attribute_name('university') %></th>
                      <th><%= @students.model.human_attribute_name('curso') %></th>
                  </tr>
              </thead>
              <tbody>
                  <% @students.each do |student| %>
                    <tr id="item-<%= student.id %>">
                        <td><%= student.name %></td>
                        <td><%= student.university %></td>
                        <td><%= student.course %></td>
                        <td style="width: 150px; ">
                            <%= link_to site_profile_students_add_to_member_path(student), class: "btn btn-success btn-circle submit_student", :method => :post, remote: true do %>
                              <%= fa_icon("plus") %> <%=t('labels.my_alumni')%>
                            <% end %>
                        </td>
                    </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
        <%= paginate @students %>
    </div>
</div>