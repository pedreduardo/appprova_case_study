<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= t('labels.identify_yourself') %></h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: "form") do |f| %>
                          <fieldset>
                              <div class="form-group">
                                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "#{t('labels.email')}", type:"email" %>
                              </div>
                              <div class="form-group">
                                <% if @minimum_password_length %>
                                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"#{t('labels.password')}", type:"password", value:"" %>
                              </div>
                              <div class="form-group">
                                <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"#{t('labels.confirm_password')}", type:"password", value:"" %>
                              </div>
                              <%= f.submit "#{t('labels.enter')}", class: "btn btn-lg btn-success btn-block" %>
                          </fieldset>

                          <%= render "members/shared/links" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<% flash.each do |key, value| %>
  <script>$.notify("<%= value %>","info")</script>
<% end %>
